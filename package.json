{
  "name": "isekai_pip",
  "version": "1.0.1",
  "description": "",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "electron .",
    "build:win": "electron-builder --windows nsis:x64 -p always",
    "build:mac": "electron-builder build --mac"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kewool/IsekaiPiP.git"
  },
  "author": "kewool",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kewool/IsekaiPiP/issues"
  },
  "homepage": "https://github.com/kewool/IsekaiPiP#readme",
  "dependencies": {
    "@twurple/api": "^5.0.19",
    "@twurple/auth": "^5.0.19",
    "@twurple/auth-electron": "^5.0.19",
    "electron-store": "^8.0.1",
    "electron-updater": "^5.0.1",
    "path": "^0.12.7",
    "twitch-m3u8": "^1.1.5"
  },
  "devDependencies": {
    "electron": "^18.0.2",
    "electron-builder": "^23.0.3",
    "electron-log": "^4.4.6",
    "eslint": "^8.14.0",
    "eslint-config-google": "^0.14.0"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "kewool",
        "repo": "IsekaiPiP"
      }
    ],
    "productName": "IsekaiPiP",
    "appId": "com.electron.IsekaiPIP",
    "asar": true,
    "protocols": {
      "name": "IsekaiPiP",
      "schemes": [
        "IsekaiPiP"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "/src/assets/icon3.png"
    },
    "mac": {
      "target": [
        "default"
      ],
      "icon": "./src/assets/icon4.png"
    },
    "dmg": {
      "title": "IsekaiPiP",
      "icon": "./src/assets/icon4.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "이세계PiP",
      "deleteAppDataOnUninstall": true,
      "perMachine": true
    },
    "directories": {
      "buildResources": "./resources/installer/",
      "output": "./dist/",
      "app": "."
    }
  }
}
